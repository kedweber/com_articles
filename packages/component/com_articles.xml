<?xml version="1.0" encoding="utf-8"?>
<extension type="component" version="3.0.0" method="upgrade" overwrite="true">
    <name>Articles</name>
    <author>Dave Li</author>
    <creationDate>October 2013</creationDate>
    <copyright>Copyright (C) 2013 Moyo Web Architects and Contributors. (http://www.moyoweb.nl)</copyright>
    <license>http://www.gnu.org/licenses/gpl.html GNU/GPL v3</license>
    <authorEmail>dave@moyoweb.nl</authorEmail>
    <authorUrl>www.moyoweb.nl</authorUrl>
    <version>2.1.2</version>
    <description>Articles</description>

    <install>
        <sql>
            <file driver="mysql" charset="utf8">install/install.sql</file>
        </sql>
    </install>

    <files folder="components/com_articles">
        <file>articles.php</file>
        <file>router.php</file>

        <folder>controllers</folder>
        <folder>databases</folder>
        <folder>forms</folder>
        <folder>language</folder>
        <folder>models</folder>
        <folder>templates</folder>
        <folder>views</folder>
    </files>

    <administration>
        <files folder="administrator/components/com_articles">
            <file>dispatcher.php</file>
            <file>articles.php</file>

            <folder>controllers</folder>
            <folder>databases</folder>
            <folder>install</folder>
            <folder>language</folder>
            <folder>models</folder>
            <folder>templates</folder>
            <folder>views</folder>
        </files>

        <languages folder="administrator/components/com_articles">
            <language tag="en-GB">language/en-GB/en-GB.com_articles.ini</language>
            <language tag="en-GB">language/en-GB/en-GB.com_articles.sys.ini</language>
            <language tag="fr-FR">language/fr-FR/fr-FR.com_articles.ini</language>
            <language tag="fr-FR">language/fr-FR/fr-FR.com_articles.sys.ini</language>
        </languages>

        <menu>COM_ARTICLES</menu>
    </administration>
</extension>